@model RedefinirSenhaModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Redefinir Senha";
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
}

<form asp-controller="Login" asp-action="EnviarLinkParaRedefinirSenha" method="post">
    <!-- Email input -->

    <!-- Password input -->
    <div class="form-outline mb-4">
        <label class="form-label" for="Email">Email</label>
        <input type="text" id="email" class="form-control" asp-for="Email" />
        @Html.ValidationMessageFor(x=>x.Email)
    </div>
    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Redefinir Senha</button>
    <a class="btn btn-secondary btn-block mb-4" asp-controller="Login" asp-action="Index"> Voltar</a>

</form>