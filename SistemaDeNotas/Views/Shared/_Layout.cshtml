<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema De Notas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaDeNotas.styles.css" asp-append-version="true" />
    <link href="https://cdn.datatables.net/v/dt/dt-1.13.4/datatables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.4.1/css/responsive.dataTables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</head>

<body>

    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @await Component.InvokeAsync("Menu")
            </div>
        </nav>

        
        <div class="menu-mobile" id="menu-mobile">

        <div class="btn-fechar"><i class="bi bi-x-lg"></i></div>
            <nav>
                <ul>
                    <li class="item-menu">
                        <span class="icon"><i class="bi bi-house-fill"></i></span>
                        <a class="btn" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                  
                    <li class="item-menu">
                        <span class="icon"><i class="bi bi-journal-check"></i></span>
                            <a class="btn" asp-area="" asp-controller="Nota" asp-action="Index">Notas</a>
                    </li>

                    <li class="item-menu">
                        <span class="icon"><i class="bi bi-file-lock2-fill"></i></span>
                        <a class="btn" asp-area="" asp-controller="AlterarSenha" asp-action="Index">Alterar Senha</a>
                    </li>
                    <li class="item-menu">
                        <span class="icon"><i class="bi bi-toggle-on"></i></span>
                        <a id="toggle" class="btn">Alterar Tema</a>
                    </li>
                    <li class="item-menu">
                        <span class="icon"><i class="bi bi-box-arrow-left"></i></span>
                        <a class="btn" asp-area="" asp-controller="Login" asp-action="Sair">Sair</a>
                    </li>
                    
                </ul>
            </nav>

        </div>
        <div class="overlay-menu" id="overlay-menu"></div>
    </header>

   
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="smoothscroll-top">
        <span class="scroll-top-inner">
            <i class="fa fa-2x fa-arrow-circle-up"></i>
        </span>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-1.13.4/datatables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.4.1/js/dataTables.responsive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/ce66a97387.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

